<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="377dp"
        android:layout_height="300dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtcaja"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="5">

        <Button
            android:id="@+id/btnigual"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#AB313F43"
            android:onClick="igual"
            android:text="="
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btncinco"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt5"
            android:text="5"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnnue"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt9"
            android:text="9"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnsie"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt7"
            android:text="7"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnseis"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt6"
            android:text="6"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btncua"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt4"
            android:text="4"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnoch"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt8"
            android:text="8"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnElimTodo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#AB313F43"
            android:onClick="clear"
            android:text="c"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnMult"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#AB313F43"
            android:onClick="multiplicacion"
            android:text="*"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnmenos"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#AB313F43"
            android:onClick="resta"
            android:text="-"
            app:layout_column="1"
            app:layout_row="0" />

        <Button

            android:id="@+id/btndiv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#AB313F43"
            android:onClick="division"
            android:text="/"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnMas"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#AB313F43"
            android:onClick="suma"
            android:text="+"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/cero"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt0"
            android:text="0"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnElimNum"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#AB313F43"
            android:onClick="borrar"
            android:text="Del"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btntres"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt3"
            android:text="3"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btndos"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt2"
            android:text="2"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnuno"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="#F8F5F5"
            android:onClick="bt1"
            android:text="1"
            app:layout_column="0"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

    <EditText
        android:id="@+id/txtcaja"
        android:layout_width="358dp"
        android:layout_height="72dp"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>